{
  "configurations": {
    "ios.sim.debug": {
      "binaryPath": "bin/Exponent.app",
      "type": "ios.simulator",
      "name": "iPhone 11"
    },
    "ios.sim.release": {
      "binaryPath": "bin/Exponent.app",
      "type": "ios.simulator",
      "name": "iPhone 11"
    },
    "android.emu.debug": {
      "binaryPath": "bin/Exponent.app",
      "type": "android.emulator",
      "device": {
        "avdName": "Nexus_6_API_29"
      }
    },
    "android.emu.release": {
      "binaryPath": "bin/Exponent.app",
      "type": "android.emulator",
      "device": {
        "avdName": "Nexus_6_API_29"
      }
    }
  },
  "artifacts": {
    "rootDir": ".artifacts",
    "plugins": {
      "instruments": { "enabled": false },
      "log": { "enabled": true },
      "uiHierarchy": "enabled",
      "screenshot": {
        "shouldTakeAutomaticSnapshots": true,
        "keepOnlyFailedTestsArtifacts": true,
        "takeWhen": {
          "testStart": false,
          "testDone": true
        }
      }
    }
  },
  "test-runner": "mocha",
  "runner-config": "./e2e/.mocharc.json"
}
